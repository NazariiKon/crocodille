<Window x:Class="CrocodileClient.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrocodileClient"
        mc:Ignorable="d"
        Title="Registration" Height="510" Width="460">
    <StackPanel Background="#ffed83">
        <Border Margin="40" CornerRadius="90" Width="150" Height="150" >
            <Border.Background>
                <ImageBrush ImageSource="/crocodile.png"/>
            </Border.Background>
        </Border>

        <Label Width="300" Height="40" FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Center">NICKNAME</Label>
        <TextBox Name="nicknameTextBox" Width="300" Height="40" Background="#FFD8C8C8" FontSize="24" FontWeight="Bold" BorderThickness="2" BorderBrush="Black" Padding="5, 0, 0, 0" Margin="0,15,0,45"></TextBox>
        <Button Name="startBtn" Width="200" Height="60" Background="#03c03c" FontSize="24" FontWeight="Bold" BorderThickness="2" BorderBrush="Black" Click="startBtn_Click" >START
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="40"/>
                </Style>
            </Button.Resources>
        </Button>
    </StackPanel>
</Window>
